#include<iostream>
using namespace std;
int main()
{
    float a,b;
    char op;
    cout<<"Enter two numbers: \n";
    cin>>a>>b;
    cout<<"Enter operator : +, -, *, / : \n\n";
    cin>>op;
    switch(op)
    {
        case '+':  
                 cout << a << " + " << b << " = " << a + b;
                    break;
        case '-': 
                  cout << a << " - " << b << " = " << a - b;
                    break;
        case '*':  
                  cout << a << " * " << b << " = " << a * b;
                    break;
        case '/': 
                    cout << a << " / " << b << " = " << a / b;
                   break;
        default: 
                cout<<"Invalid choice";
                break;
        
    }
      return 0;
}
